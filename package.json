{
  "name": "sme-booking-app",
  "version": "0.1.0",
  "description": "SME Service Booking Application",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,css}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,css}'",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "seed": "tsx scripts/seed.ts",
    "db:reset": "rm db/sqlite.db && npm run seed",
    "db:push": "prisma db push",
    "mock:status": "curl http://localhost:3000/api/v1/mock-status",
    "mock:failures": "curl -X PATCH http://localhost:3000/api/v1/mock-status -H 'Content-Type: application/json' -d '{\"service\":\"sms\",\"settings\":{\"failureRate\":0.5}}'",
    "docker:build": "docker build -t sme-booking-app .",
    "docker:dev": "docker-compose -f docker-compose.yml up",
    "docker:logs": "docker-compose logs -f app",
    "dev:full": "npm run db:reset && npm run dev",
    "check-all": "npm run type-check && npm run lint && npm run test:coverage",
    "pre-commit": "npm run type-check && npm run lint:fix && npm run format",
    "prepare": "husky install"
  },
  "keywords": [
    "booking",
    "sme",
    "services"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^5.9.0",
    "@sentry/nextjs": "^10.38.0",
    "@tanstack/react-query": "5.90.20",
    "@types/react-window": "1.8.8",
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.0",
    "bull": "^4.12.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "framer-motion": "^12.33.0",
    "isomorphic-dompurify": "^2.36.0",
    "leven": "^4.1.0",
    "lucide-react": "0.563.0",
    "next": "^14.1.0",
    "pino": "^8.18.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.0",
    "react": "^18.2.0",
    "react-big-calendar": "1.19.4",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.71.1",
    "react-window": "2.2.6",
    "recharts": "3.7.0",
    "redis": "^4.6.0",
    "uuid": "^13.0.0",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.1",
    "@next/bundle-analyzer": "^14.1.0",
    "@playwright/test": "^1.41.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/node": "^20.10.0",
    "@types/react": "18.3.28",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "axe-core": "^4.11.1",
    "eslint": "^8.55.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-next": "^14.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.9",
    "postcss": "^8.4.0",
    "prettier": "^3.1.0",
    "prisma": "^5.9.0",
    "tailwindcss": "^3.4.0",
    "typescript": "5.9.3",
    "vitest": "^1.1.0",
    "vitest-axe": "^0.1.0"
  }
}
