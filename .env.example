# ==================== APPLICATION ====================
NODE_ENV=development
APP_URL=http://localhost:3000
APP_PORT=3000

# ==================== DATABASE ====================
DATABASE_URL="file:./db/sqlite.db"
DATABASE_MOCK=true

# ==================== GOOGLE CALENDAR ====================
# Mock Mode Configuration (LOCAL DEVELOPMENT)
GOOGLE_CALENDAR_MOCK=true
GOOGLE_CLIENT_ID=mock-client-id
GOOGLE_CLIENT_SECRET=mock-secret
ALLOWED_CALENDAR_ORIGINS=http://localhost:3000

# Real Google Calendar API Integration (PHASE 4 - OPTIONAL)
# When set, uses real Google Calendar API instead of mock
# Leave empty to use mock availability (default - LOCAL MODE)
GOOGLE_CALENDAR_API_KEY=
GOOGLE_CALENDAR_CREDENTIALS=

# Google Calendar OAuth Scopes (comma-separated)
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar,https://www.googleapis.com/auth/calendar.events

# Webhook Configuration for Calendar Push Notifications
GOOGLE_CALENDAR_WEBHOOK_SECRET=your-webhook-secret
CALENDAR_WEBHOOK_URL=http://localhost:3000/api/webhooks/google-calendar

# ==================== TIMEZONE CONFIGURATION ====================
# Expert and customer timezone handling for appointment scheduling
# Use IANA timezone format (e.g., 'America/New_York', 'Europe/London', 'UTC')
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
EXPERT_TIMEZONE=America/New_York
CUSTOMER_TIMEZONE=America/Los_Angeles

# ==================== TWILIO SMS ====================
TWILIO_ACCOUNT_SID=mock-sid
TWILIO_AUTH_TOKEN=mock-token
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_MOCK=true
MOCK_SMS_FAILURE_RATE=0
MOCK_SMS_DELAY_MS=0

# ==================== SENDGRID EMAIL ====================
SENDGRID_API_KEY=mock-key
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_MOCK=true
MOCK_EMAIL_FAILURE_RATE=0
MOCK_EMAIL_DELAY_MS=0

# ==================== LLM / ANTHROPIC ====================
ANTHROPIC_API_KEY=
ANTHROPIC_MOCK=true
LLM_MODEL=claude-sonnet-4-5

# ==================== MODEL PRICING ====================
# Pricing per 1M tokens (input/output)
# Default: Sonnet 4.5 pricing
CLAUDE_PRICING_OPUS_INPUT=15.0
CLAUDE_PRICING_OPUS_OUTPUT=75.0
CLAUDE_PRICING_SONNET_INPUT=3.0
CLAUDE_PRICING_SONNET_OUTPUT=15.0
CLAUDE_PRICING_HAIKU_INPUT=0.25
CLAUDE_PRICING_HAIKU_OUTPUT=1.25

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================== REDIS (OPTIONAL) ====================
REDIS_URL=
CACHE_TTL_SECONDS=3600

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FORMAT=json

# ==================== CALENDAR PERSISTENCE ====================
CALENDAR_PERSIST=false

# ==================== FEATURE FLAGS ====================
ENABLE_METRICS=true
ENABLE_REQUEST_TRACING=true
ENABLE_RESPONSE_COMPRESSION=true

# ==================== MONITORING & ERROR TRACKING (PHASE 5.3) ====================
# Sentry Configuration for Error Tracking
# Get DSN from: https://sentry.io/organizations/your-org/

# Client-side Sentry (errors, performance, sessions)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_APP_VERSION=0.1.0

# Server-side Sentry (server errors, API performance, database)
SENTRY_DSN=
SENTRY_DEBUG=false

# Sentry Environment (development, staging, production)
SENTRY_ENVIRONMENT=development

# ==================== GOOGLE ANALYTICS 4 ====================
# Get Measurement ID from: https://analytics.google.com/

# GA4 Measurement ID for tracking user flows and events
NEXT_PUBLIC_GA4_MEASUREMENT_ID=

# Enable/disable analytics
NEXT_PUBLIC_ENABLE_GA4=true

# ==================== WEB VITALS MONITORING ====================
# Track Core Web Vitals: LCP, FID, CLS, FCP, TTFB

# Enable Web Vitals monitoring
NEXT_PUBLIC_ENABLE_WEB_VITALS=true

# Web Vitals thresholds (in milliseconds)
WEB_VITALS_LCP_THRESHOLD=2500
WEB_VITALS_FID_THRESHOLD=100
WEB_VITALS_CLS_THRESHOLD=0.1
WEB_VITALS_FCP_THRESHOLD=1800
WEB_VITALS_TTFB_THRESHOLD=800

# Performance budgets
PERFORMANCE_BUDGET_PAGE_LOAD=3000
PERFORMANCE_BUDGET_API_RESPONSE=500
PERFORMANCE_BUDGET_NAVIGATION=1000

# ==================== MONITORING & OBSERVABILITY ====================
# Metrics collection and monitoring

# Enable monitoring features
ENABLE_MONITORING=true

# Health check interval (milliseconds)
HEALTH_CHECK_INTERVAL=60000

# Request logging
LOG_REQUESTS=true
LOG_REQUEST_BODY=false
LOG_RESPONSE_TIME=true

# Database monitoring
ENABLE_DB_MONITORING=true
DB_SLOW_QUERY_THRESHOLD=100

# Cache monitoring
ENABLE_CACHE_MONITORING=true

# Queue monitoring
ENABLE_QUEUE_MONITORING=true

# ==================== ALERTS & NOTIFICATIONS ====================
# Alert configuration for critical issues

# Error rate alert threshold (percentage)
ERROR_RATE_THRESHOLD=1

# Slow request alert threshold (milliseconds)
SLOW_REQUEST_THRESHOLD=300

# Memory usage alert threshold (percentage)
MEMORY_USAGE_THRESHOLD=80

# Enable email alerts
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL_RECIPIENT=admin@example.com

# Enable Slack alerts (requires webhook URL)
ENABLE_SLACK_ALERTS=false
SLACK_WEBHOOK_URL=

# Enable PagerDuty alerts (requires API key)
ENABLE_PAGERDUTY_ALERTS=false
PAGERDUTY_API_KEY=
PAGERDUTY_SERVICE_ID=

# ==================== LOG AGGREGATION ====================
# Log storage and retention

# Log format: json (structured) or pretty (human-readable)
LOG_FORMAT=json

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log retention (days)
LOG_RETENTION_DAYS=30

# Enable request correlation IDs
ENABLE_CORRELATION_IDS=true

# ==================== BUSINESS METRICS LOGGING ====================
# Log business events: bookings, revenue, customers

# Enable business metrics
ENABLE_BUSINESS_METRICS=true

# Store business metrics in database
STORE_BUSINESS_METRICS=false

# Business metrics retention (days)
BUSINESS_METRICS_RETENTION_DAYS=90
